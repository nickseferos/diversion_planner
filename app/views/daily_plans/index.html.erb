<p id="notice"><%= notice %></p>

<h1>Daily Plans</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_plans.each do |daily_plan| %>
      <tr>
        <td><%= daily_plan.date %></td>
        <td><%= link_to 'Show', daily_plan %></td>
        <td><%= link_to 'Edit', edit_daily_plan_path(daily_plan) %></td>
        <td><%= link_to 'Destroy', daily_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Plan', new_daily_plan_path %>
